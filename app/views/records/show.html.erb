<p id="notice"><%= notice %></p>
<p id="alert"><%= alert %></p>

<p>
  <strong>Count:</strong>
  <%= @record.order.count %>
</p>

<p>
  <strong>Price:</strong>
  <%= @record.order.price %>
</p>

<p>
  <strong>Commodity:</strong>
  <%= @record.order.commodity.name %>
</p>

<% if @record.section %>
  <%= link_to 'Comment!', commodity_section_url(@record.order.commodity, @record.section) %>
<% else %>
  <%= form_for Section.new, url: commodity_sections_url(@record.order.commodity) do |f| %>
    <%= f.label :grade %>
    <%= f.number_field :grade, in: 1..5, step: 1 %>

    <%= f.hidden_field :record_id, :value => @record.id %>

    <%= f.submit %>
  <% end %>
<% end %>

<br/>

<%= link_to 'Back', customer_records_path(@record.order.customer) %>
