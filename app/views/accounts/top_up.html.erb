<% if notice %>
  <div class="alert alert-success" role="alert" style="left: auto">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div id="toast1" role="alert" aria-live="assertive" aria-atomic="true" class="toast">
    <div class="toast-header">
      <strong class="mr-auto">提醒</strong>
      <small></small>
      <button id="notice1" type="button" class="ml-2 mb-1 close toastButton" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      <%= alert["id"] %>
    </div>
  </div>
<% end %>

<h1>开始充值</h1>
<div class="card">
  <div class="card-header">充值信息</div>
  <div class="card-body">
    <%= form_with url: account_do_top_up_path(@account) do %>
      <p>
        充值金额: <%= number_field_tag :balance_add, min: 0.1, step: 0.1, required:"" %>
      </p>
      <%= submit_tag '确认' %>
    <% end %>
  </div>
</div>
