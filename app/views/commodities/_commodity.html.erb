<div id="commodity_<%= commodity.id %>">
  <p>
    Name: <strong><%= commodity.name %></strong><br/>
    Introduction: <%= commodity.introduction %><br/>
    Price: <%= commodity.price %>
  </p>
  <%= link_to 'Details', commodity %> |
  <% if current_account && current_account.id == commodity.shop.seller.account.id %>
    <%= link_to 'Destroy', commodity, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>