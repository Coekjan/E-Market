<body class="loginSurface">

<% if notice %>
  <div id="toast1" role="alert" aria-live="assertive" aria-atomic="true" class="toast">
    <div class="toast-header">
      <strong class="mr-auto">提醒</strong>
      <small>
        <button id="notice1" type="button" class="ml-2 mb-1 toastButton" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </small>
    </div>
    <div class="toast-body">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="card complaintCard">
  <div class="card-header">投诉信息</div>
  <div class="card-body">
    <p>
      <strong>买家:</strong>
      <%= @complaint.customer.account.name %>
    </p>

    <p style="margin: 5%auto">
      <strong>卖家:</strong>
      <%= @complaint.seller.account.name %>
    </p>

    <p style="margin: 5%auto">
      <strong>投诉内容:</strong>
      <%= @complaint.content %>
    </p>

    <p style="margin: 5%auto">
      <strong>处理人:</strong>
      <%= @complaint.admin.account.name if @complaint.admin %>
    </p>

    <% if @complaint.is_handled? %>
      <div class="leftButton"></div>
    <% else %>
      <%= link_to '修改信息', edit_complaint_path(@complaint), class: "leftButton btn btn-primary", style: "color: gainsboro;"%>
    <% end %>
    <%= link_to '返回', complaints_path, class: "rightButton btn btn-primary", style: "color: gainsboro; width: 40%;" %>
  </div>
</div>
