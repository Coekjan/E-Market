<!DOCTYPE html>

<div class="text-center">
<% if alert %>
  <div class="<%= alert["type"]%>" role="<%= alert["role"] %>" style="left: auto">
    <h4 class="alert-heading" style="text-align: left"><%= alert["id"] %></h4>
  </div>
<% end %>

<%= form_with url: do_login_accounts_path do %>
  <div class="center-in-center">
  <%= image_tag("brand.jpeg", class:"mb-4 brandPhoto") %>
  <h1 class="h3 mb-3 font-weight-normal">欢迎来到天上优购</h1>
  <label for="inputAccount" class="sr-only">Account ID</label>
  <label for="id"></label>
  <input type="text" name="id" id="id" class="form-control" placeholder="账户编号" required autofocus size="5" style="width: 20%; margin:1% auto">
  <label for="inputPassword" class="sr-only">Password</label>
  <label for="password"></label>
  <input type="password" name="password" id="password" class="form-control" placeholder="密码" required style="width: 20%; margin:1% auto">

  <button type="submit" name="commit" value="LOGIN" data-disable-with="登陆" class="btn btn-primary loginBox" style="color: gainsboro">登陆</button>
  <%= link_to '注册', register_accounts_url, class:'btn btn-primary loginBox', style: "color: gainsboro"%>
  </div>
<% end %>

</div>

</div>