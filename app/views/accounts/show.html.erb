<body class="loginSurface">

<% if notice %>
  <div id="toast1" role="alert" aria-live="assertive" aria-atomic="true" class="toast">
    <div class="toast-header">
      <strong class="mr-auto">提醒</strong>
      <small>
        <button id="notice1" type="button" class="ml-2 mb-1 toastButton" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </small>
    </div>
    <div class="toast-body">
      <%= notice %>
    </div>
  </div>
<% end %>

<div class="card accountCard">
  <div class="card-header">用户信息</div>
  <div class="card-body">
    <p>
      <strong>用户名：</strong>
      <%= @account.name %>
    </p>

    <p style="margin: 5%auto">
      <strong>密码：</strong>
      <%= @account.password %>
    </p>

    <p style="margin: 5%auto">
      <strong>角色：</strong>
      <%= @account.role %>
    </p>

    <p style="margin: 5%auto">
      <strong>余额：</strong>
      <%= @account.balance %>
    </p>

    <%= link_to '修改信息', edit_account_path(@account), class: "btn btn-primary leftButton", style: "color: gainsboro"%>
    <%= link_to '返回', accounts_path, class: "btn btn-primary rightButton", style: "color: gainsboro" %>

  </div>
</div>


</body>
