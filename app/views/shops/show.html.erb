<% if notice %>
  <div id="toast1" role="alert" aria-live="assertive" aria-atomic="true" class="toast">
    <div class="toast-header">
      <strong class="mr-auto">提醒</strong>
      <small>
        <button id="notice1" type="button" class="ml-2 mb-1 toastButton" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </small>
    </div>
    <div class="toast-body">
      <%= notice %>
    </div>
  </div>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<p>
  <strong>Introduction:</strong>
  <%= @shop.introduction %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @shop.seller.account.name %> | ID: <%= @shop.seller.account.id %>
</p>

<%= link_to 'Edit', edit_seller_shop_path(@shop.seller) %> |
<%= link_to 'Back', seller_path(@shop.seller) %>

<h2>Commodities</h2>
<div id="commodities">
  <%= render :partial => @shop.commodities %>
</div>

<% if current_account && current_account.id == @shop.seller.account.id %>
  <h2>Add Commodities</h2>
  <%= form_for Commodity.new, url: commodities_url do |f| %>
    <p>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :introduction, "Introduction" %>
      <%= f.text_area :introduction %>
    </p>
    <p>
      <%= f.label :price, "Price" %>
      <%= f.number_field :price, in: 0.1..10000000000.0, step: 0.1 %>
    </p>
    <div>
      <%= f.hidden_field :shop_id, :value => @shop.id %>
    </div>
    <p>
      <%= f.submit "Add new commodities" %>
    </p>
  <% end %>
<% end %>